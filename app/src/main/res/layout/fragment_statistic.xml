<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="93dp"
        android:background="@color/milk"
        tools:context=".ui.statistic.StatisticFragment">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/statistics_filtering_layout"
            android:translationZ="10dp"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="30dp"
                android:id="@+id/statisticType_linearlayout"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/filter_bg"
                android:layout_weight="5">
            <TextView
                    android:text="@string/filter_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/charachter_text"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/very_light_gold"
                    android:layout_gravity="center"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">
                <LinearLayout
                        android:id="@+id/statistic_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_bg"
                        android:orientation="horizontal">
                    <Spinner
                            android:id="@+id/statistic_type_selector"
                            android:layout_width="wrap_content"
                            android:maxWidth="160dp"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:clickable="false"
                            android:background="@android:color/transparent"
                            android:popupBackground="@color/milk"
                            android:popupTheme="@style/secondaryTextColor"
                            android:spinnerMode="dropdown"
                            android:textColor="@android:color/black"
                            android:textStyle="bold">
                    </Spinner>
                    <LinearLayout

                            android:id="@+id/statistic_arrow_down_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:gravity="end">
                        <ImageButton
                                android:src="@drawable/ic_arrow_down"
                                android:background="@android:color/transparent"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/statistic_type_arrow"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageButton
                android:src="@drawable/ic_filter"
                android:background="@drawable/round_button_bg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/filterButton"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statistics_layout"
            android:background="@color/milk"
            app:layout_constraintTop_toBottomOf="@+id/statistics_filtering_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wish_statistics_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/primogems_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <!-- Square PieChart Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fifty_fifty_win"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/item_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fifty_fifty_win_strike"
                    app:layout_constraintDimensionRatio="1:1">

                <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Square Value Display Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fifty_fifty_win_strike"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/item_bg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fifty_fifty_win"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                            android:id="@+id/fifty_50_wins_strike_title"
                            android:text="@string/fifty_50_wins_strike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            style="@style/secondaryTextColor" />

                    <TextView
                            android:id="@+id/fifty_50_wins_strike_value"
                            android:text="10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:layout_marginBottom="10dp"
                            style="@style/primaryTextColor" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/primogems_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/primogems"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_wish_stat_bg"
                    android:gravity="center_horizontal"
                    android:layout_weight="1.5">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/primogems_value"
                            android:text="10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            style="@style/primaryTextColor"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            tools:ignore="RtlCompat"/>

                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_primogem"
                            android:id="@+id/primogem_icon"
                            android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wish_pulls"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_wish_stat_bg"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/wish_pulls_value"
                            android:text="10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            style="@style/primaryTextColor"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            tools:ignore="RtlCompat"/>

                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_wish_pull"
                            android:id="@+id/wish_pulls_icon"
                            android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/standard_pulls"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_wish_stat_bg"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:id="@+id/standard_pulls_value"
                            android:text="10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            style="@style/primaryTextColor"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            tools:ignore="RtlCompat"/>

                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_standart_pull"
                            android:id="@+id/standard_pulls_icon"
                            android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid_layout"
            android:translationZ="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/statistics_filtering_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent">
        <GridView
                android:id="@+id/owned_items"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:numColumns="3"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>