<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="93dp"
        android:background="@color/milk"
        tools:context=".ui.statistic.StatisticFragment">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/statistics_filtering_layout"
            android:translationZ="10dp"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="30dp"
                android:id="@+id/statisticType_linearlayout"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/filter_bg"
                android:layout_weight="5">
            <TextView
                    android:text="@string/filter_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/charachter_text"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/very_light_gold"
                    android:layout_gravity="center"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">
                <LinearLayout
                        android:id="@+id/statistic_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_bg"
                        android:orientation="horizontal">
                    <Spinner
                            android:id="@+id/statistic_type_selector"
                            android:layout_width="wrap_content"
                            android:maxWidth="160dp"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:clickable="false"
                            android:background="@android:color/transparent"
                            android:popupBackground="@color/milk"
                            android:popupTheme="@style/secondaryTextColor"
                            android:spinnerMode="dropdown"
                            android:textColor="@android:color/black"
                            android:textStyle="bold">
                    </Spinner>
                    <LinearLayout

                            android:id="@+id/statistic_arrow_down_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal"
                            android:gravity="end">
                        <ImageButton
                                android:src="@drawable/ic_arrow_down"
                                android:background="@android:color/transparent"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/statistic_type_arrow"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageButton
                android:src="@drawable/ic_filter"
                android:background="@drawable/round_button_bg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/filterButton"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>