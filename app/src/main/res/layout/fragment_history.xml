<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="93dp"
        android:background="@color/milk"
        tools:context=".ui.history.HistoryFragment">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout"
            android:translationZ="10dp"
            app:layout_constraintTop_toTopOf="parent">
        <SearchView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/search_bg"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/searchBar"
                android:layout_weight="1">

        </SearchView>
        <ImageButton
                android:src="@drawable/ic_add"
                android:background="@drawable/round_button_bg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/addButton"/>
        <ImageButton
                android:src="@drawable/ic_filter"
                android:background="@drawable/round_button_bg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/filterButton"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:id="@+id/linearLayout2">
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/charachter_layout"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1">
            <ImageButton
                    android:background="@drawable/button_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/charachter_button"/>
            <TextView
                    android:text="@string/charachter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/charachter_text"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    style="@style/secondaryTextColor"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weapon_layout"
                android:layout_marginStart="15dp"

                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1">
            <ImageButton
                    android:background="@drawable/button_active"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/weapon_button"/>
            <TextView
                    android:text="@string/weapon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weapon_text"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    style="@style/primaryTextColor"
                    android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/standart_layout"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:translationZ="10dp"
                android:layout_weight="1">
            <ImageButton
                    android:background="@drawable/button_active"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/standart_button"/>
            <TextView
                    android:text="@string/standart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/standart_text"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    style="@style/primaryTextColor"
                    android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>