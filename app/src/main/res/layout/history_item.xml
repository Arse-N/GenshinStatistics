<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:id="@+id/history_item"
        android:background="@android:color/transparent"
        android:translationZ="-15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_bg"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/recycler_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/linearLayout1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:elevation="10dp">
            <LinearLayout
                    android:id="@+id/color_card"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="8dp">
                <ImageView
                        android:id="@+id/item_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:minWidth="200dp"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout2">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/linearLayout22"
                        app:layout_constraintStart_toStartOf="parent">
                    <TextView
                            android:text="Mavuika"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name_value"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            style="@style/primaryTextColor"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="15dp"
                            android:ellipsize="end"
                            android:singleLine="true"/>
                    <ImageView
                            android:id="@+id/sign_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/linearLayout3"
                        app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                            android:id="@+id/location_icon"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="7dp"
                            app:srcCompat="@drawable/ic_location"/>
                    <TextView
                            android:id="@+id/location_value"
                            android:text="Natlan"
                            android:layout_marginStart="5dp"
                            style="@style/primaryTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:singleLine="true"/>

                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/linearLayout4"
                        app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                            android:id="@+id/date_icon"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="7dp"
                            app:srcCompat="@drawable/ic_date"/>
                    <TextView
                            android:id="@+id/birthdate_value"
                            android:text="08/22"
                            android:layout_marginStart="5dp"
                            style="@style/primaryTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/linearLayout7"
                    android:layout_marginEnd="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_weight="1">
                <LinearLayout
                        android:id="@+id/number_card"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="0dp">
                    <TextView
                            android:text="29"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/number_value"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            style="@style/primaryTextColor"
                            android:ellipsize="end"
                            android:singleLine="true"/>
                </LinearLayout>
                <TextView
                        android:id="@+id/win_date_value"
                        android:text="08/22/2024"
                        style="@style/secondaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>